{
  "general": {
    "log file": "/var/log/log-courier/log-courier.log"
  },
  "network": {
    "servers": [
    {% for host in groups['elk'] %}
      "{{ host }}.{{ domain_name }}:5043"{% if not loop.last %},{% endif %}
    {% endfor %}
    ],
    "transport": "tcp"
  },
  "files": [
    {
      "paths": [
        "/var/log/messages",
        "/var/log/secure",
        "/var/log/*.log"
      ],
      "fields": { "type": "syslog" }
    }
  ]
}
